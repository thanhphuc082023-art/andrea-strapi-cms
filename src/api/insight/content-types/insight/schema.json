{
  "kind": "collectionType",
  "collectionName": "insights",
  "info": {
    "singularName": "insight",
    "pluralName": "insights",
    "displayName": "Insight"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 200,
      "required": true,
      "unique": true
    },
    "excerpt": {
      "type": "string",
      "maxLength": 500,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "category": {
      "type": "string",
      "required": true
    },
    "insightStatus": {
      "type": "enumeration",
      "default": "draft",
      "enum": [
        "draft",
        "published"
      ]
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "content": {
      "type": "json",
      "required": true
    },
    "author": {
      "type": "component",
      "component": "author.author-info",
      "repeatable": false
    },
    "hero": {
      "type": "component",
      "component": "media.hero-images",
      "repeatable": false
    },
    "thumbnail": {
      "type": "component",
      "component": "media.file-upload",
      "repeatable": false
    },
    "seo": {
      "type": "json"
    }
  }
}
